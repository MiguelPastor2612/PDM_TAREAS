<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".SummaryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        tools:ignore="MissingClass">

        <!-- Título Principal -->
        <TextView
            android:id="@+id/title_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Resumen y Confirmación"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/subtitle_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="¡Tu pedido ha sido procesado con éxito!"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/title_summary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sección de Pedido -->
        <TextView
            android:id="@+id/label_pedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Detalles del Pedido:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/subtitle_summary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewResumenPedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            android:text="[Aquí se mostrará el resumen del pedido]"
            app:layout_constraintTop_toBottomOf="@id/label_pedido"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sección de Contacto -->
        <TextView
            android:id="@+id/label_contacto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Información de Contacto:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/textViewResumenPedido"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            android:text="Email: [Aquí se mostrará el email]"
            app:layout_constraintTop_toBottomOf="@id/label_contacto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewDireccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp"
            android:text="Dirección: [Aquí se mostrará la dirección]"
            app:layout_constraintTop_toBottomOf="@id/textViewEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewNewsletter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp"
            android:text="Suscripción: [Aquí se mostrará la suscripción]"
            app:layout_constraintTop_toBottomOf="@id/textViewDireccion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón de Finalizar -->
        <Button
            android:id="@+id/buttonFinalizar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Finalizar y Volver al Inicio"
            android:textSize="18sp"
            android:paddingVertical="12dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/textViewNewsletter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>